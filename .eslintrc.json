{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:node/recommended",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "class-methods-use-this": "off",
        "func-names": ["error", "as-needed"],
        "default-case": "off",

        "import/extensions": [ "error", "ignorePackages",
            { "ts": "never" }
         ],
        "node/no-missing-import": "off"
    },
    "settings": {
        "import/resolver": {
          "typescript": {} 
        }
      }
}
